{
  "name": "cypress-hardhat",
  "version": "1.0.0",
  "description": "A cypress plugin for testing against hardhat",
  "repository": "https://github.com/Uniswap/cypress-hardhat",
  "author": "Zach Pomerantz <zzmp@uniswap.org>",
  "license": "GPL-3.0-or-later",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "yarn compile",
    "compile": "typechain --target ethers-v5 --out-dir src/types 'abis/**/*.json'",
    "build": "tsc",
    "lint": "eslint . --ignore-path .gitignore",
    "test": "jest src/ --runInBand --coverage",
    "prepublishOnly": "yarn build",
    "release": "semantic-release"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!src/types/**",
      "!src/plugin.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "peerDependencies": {
    "cypress": "^12.9.0",
    "ethers": "^5.1.3",
    "hardhat": "^2.9.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-typescript": "^7.17.12",
    "@semantic-release/git": "^10.0.1",
    "@typechain/ethers-v5": "^10.0.0",
    "@types/cypress": "^1.1.3",
    "@types/jest": "^27.5.1",
    "@uniswap/eslint-config": "^1.1.1",
    "@uniswap/sdk-core": "^3.0.1",
    "chai": "^4.2.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "ethers": "^5.1.3",
    "hardhat": "^2.9.6",
    "jest": "^28.1.0",
    "semantic-release": "^19.0.2",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  }
}
